<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="220dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/helvetica_neue_light"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_neue_light"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:textColor="@android:color/black"
             />

        <TextView
            android:id="@+id/textProductSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_neue_light"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/substract_svgrepo_com"
                android:text="Botón restar cantidad"
                android:backgroundTint="@android:color/black"
                android:textSize="14sp"
                android:foregroundTint="@color/background_color"
                app:cornerRadius="0dp" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:textColor="@color/background_color"
                android:backgroundTint="@android:color/black"
                app:cornerRadius="2dp"
                android:src="@drawable/number"/>

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cornerRadius="0dp"
                android:foregroundTint="@color/background_color"
                android:backgroundTint="@android:color/black"

                android:src="@drawable/add_svgrepo_com"
                android:text="Botón sumar cantidad" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
